@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</a>
        
        <form method="post" action="Identity/Account/Logout">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Log out" class="rz-ml-2"></RadzenButton>
            @* <button type="submit" class="nav-link btn btn-link">Log out</button> *@
        </form>
    </Authorized>
    <NotAuthorized>
        
        <RadzenRow>
            <RadzenColumn>
                <RadzenLink Path="Identity/Account/Register" Text="Register" class="rz-color-white rz-background-color-secondary" Style="width: 200px; padding: 10px 15px 10px 15px; border-radius: 5px;" />        
            </RadzenColumn>
            <RadzenColumn>
                <RadzenLink Path="Identity/Account/Login" Text="Login" class="rz-color-white rz-background-color-primary" Style="width: 200px; padding: 10px 15px 10px 15px; border-radius: 5px;" />
            </RadzenColumn>
        </RadzenRow>
    </NotAuthorized>
</AuthorizeView>