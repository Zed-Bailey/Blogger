@using Blogger.Data
@inject DialogService DialogService


<RadzenStack>
    
    <RadzenLabel Component="webUrl">Image web url</RadzenLabel>
    <RadzenTextBox @bind-Value="@url" Placeholder="Image web url" Name="webUrl"/>
    
    <RadzenLabel Component="altText">Image alt text</RadzenLabel>
    <RadzenTextBox @bind-Value="@altText" Placeholder="Image alt text" Name="altText"/>
    
    <RadzenLabel Component="imgWidth">Image width</RadzenLabel>
    <RadzenNumeric ShowUpDown="false" TValue="int?" @bind-Value="width" Placeholder="Image width (px)" Name="imgWidth"/>
    
    <RadzenLabel Component="imgHeight">Image height</RadzenLabel>
    <RadzenNumeric ShowUpDown="false" TValue="int?" @bind-Value="height" Placeholder="Image height (px)" Name="imgHeight"/>

    <RadzenButton Text="Insert Image" Click="Insert"></RadzenButton>
</RadzenStack>

@code {
    string url = "";
    string altText = "";
    
    int? width;
    int? height;
    
    void Insert()
    {
        var returnData = new ImageInsertModel(
            url,
            altText,
            width,
            height
        );
        
        DialogService.Close(returnData);
    }

}